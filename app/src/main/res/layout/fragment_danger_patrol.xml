<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Danger Patrol"
        android:onClick="DieSetSelectorPopup"
        android:id="@+id/textView0"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <com.lackwits.rpgtoolkit.Objects.DieTypeSelector
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Trait"
                    android:onClick="changeType"
                    android:id="@+id/Trait"
                    custom:type="12"
                    custom:next="@+id/Trait1"
                    android:background="@mipmap/chalk_square" />

                <com.lackwits.rpgtoolkit.Objects.DiceLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="12"
                        custom:pool="1"
                        android:id="@+id/Trait1"
                        custom:next="@+id/Trait2" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="12"
                        custom:pool="2"
                        android:id="@+id/Trait2"
                        custom:next="@+id/Trait3" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="12"
                        custom:pool="3"
                        android:id="@+id/Trait3"
                        custom:next="@+id/Trait4" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="12"
                        custom:pool="4"
                        android:id="@+id/Trait4"
                        custom:next="@+id/Trait5" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="12"
                        custom:pool="5"
                        android:id="@+id/Trait5"
                        custom:next="@null" />

                </com.lackwits.rpgtoolkit.Objects.DiceLayout>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gear"
                    android:id="@+id/textView6"
                    android:layout_gravity="center" />

                <com.lackwits.rpgtoolkit.Objects.DiceLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="10"
                        custom:type="10"
                        custom:pool="1"
                        android:id="@+id/DB_Gear_1"
                        custom:next="@+id/DB_Gear_2" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="8"
                        custom:type="8"
                        custom:pool="2"
                        android:id="@+id/DB_Gear_2"
                        custom:next="@+id/DB_Gear_3" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="3"
                        android:id="@+id/DB_Gear_3"
                        custom:next="@null" />

                </com.lackwits.rpgtoolkit.Objects.DiceLayout>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Danger 1"
                    android:id="@+id/textView7"
                    android:layout_gravity="center" />

                <com.lackwits.rpgtoolkit.Objects.DiceLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="1"
                        android:id="@+id/Danger1"
                        custom:next="@+id/Danger2" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="2"
                        android:id="@+id/Danger2"
                        custom:next="@+id/Danger3" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="3"
                        android:id="@+id/Danger3"
                        custom:next="@+id/Danger4" />

                </com.lackwits.rpgtoolkit.Objects.DiceLayout>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Danger 2"
                    android:id="@+id/textView8"
                    android:layout_gravity="center" />

                <com.lackwits.rpgtoolkit.Objects.DiceLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="4"
                        android:id="@+id/Danger4"
                        custom:next="@+id/Danger5" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="5"
                        android:id="@+id/Danger5"
                        custom:next="@+id/Danger6" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="6"
                        custom:type="6"
                        custom:pool="6"
                        android:id="@+id/Danger6"
                        custom:next="@null" />

                </com.lackwits.rpgtoolkit.Objects.DiceLayout>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Threat"
                    android:id="@+id/textView9"
                    android:layout_gravity="center" />

                <com.lackwits.rpgtoolkit.Objects.DiceLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="2"
                        custom:pool="1"
                        android:id="@+id/Threat_1"
                        custom:next="@+id/Threat_2" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="2"
                        custom:pool="2"
                        android:id="@+id/Threat_2"
                        custom:next="@+id/Threat_3" />

                    <com.lackwits.rpgtoolkit.Objects.DiceButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DiceButtonPress"
                        android:text="2"
                        custom:pool="3"
                        android:id="@+id/Threat_3"
                        custom:next="@null" />

                </com.lackwits.rpgtoolkit.Objects.DiceLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>
